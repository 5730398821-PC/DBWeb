<script>
function TC_TableCreate() {
  Fname = 'Database Management System Design'
  var table = document.getElementById('tc_table')
  for (var i = 0; i < 4; i++){
    var tr = document.createElement('tr');

    var cid = document.createElement('td');
    var name = document.createElement('td');
    var date = document.createElement('td');
    var sec = document.createElement('td');
    var room = document.createElement('td');

    var text_cid = document.createTextNode('2110422');
    var text_name = document.createTextNode('<%=profile_name%>');
    var text_sec = document.createTextNode('3');
    var text_date = document.createTextNode('Tue,Thu 8.00-9.30');
    var text_room = document.createTextNode('ENG100 (201)')

    cid.appendChild(text_cid);
    name.appendChild(text_name);
    date.appendChild(text_date);
    sec.appendChild(text_sec);
    room.appendChild(text_room)

    tr.appendChild(cid);
    tr.appendChild(name);
    tr.appendChild(sec);
    tr.appendChild(date);
    tr.appendChild(room);

    table.appendChild(tr);
  }
}
</script>

